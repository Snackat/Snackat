<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>قائمة الطلب</title>
  <style>
    body { font-family: sans-serif; padding: 20px; }
    .product { margin-bottom: 15px; }
    label { display: block; margin-bottom: 5px; }
    input[type="number"] { width: 60px; }
  </style>
</head>
<body>

  <h2>منيو الطلب</h2>

  <form id="orderForm">
    <div class="product">
      <label>نودلز حار (10 ريال)</label>
      <input type="number" name="نودلز حار" min="0" placeholder="كمية">
    </div>

    <div class="product">
      <label>شيبس كوري (6 ريال)</label>
      <input type="number" name="شيبس كوري" min="0" placeholder="كمية">
    </div>

    <div class="product">
      <label>مشروب رمون الياباني (9 ريال)</label>
      <input type="number" name="رمون" min="0" placeholder="كمية">
    </div>

    <label>اسمك:</label>
    <input type="text" name="الاسم" required><br><br>

    <label>رقم الواتساب:</label>
    <input type="text" name="الرقم" required><br><br>

    <button type="submit">إرسال الطلب</button>
  </form>

  <script>
    document.getElementById("orderForm").addEventListener("submit", function(e){
      e.preventDefault();
      const data = new FormData(this);
      let msg = "طلب جديد:\n";

      for (let [key, value] of data.entries()) {
        if (value && value !== "0") msg += `${key}: ${value}\n`;
      }

      const phone = data.get("الرقم").replace(/[^0-9]/g, "");
      const waUrl = `https://wa.me/966${phone}?text=${encodeURIComponent(msg)}`;
      window.open(waUrl, "_blank");
    });
  </script>

</body>
